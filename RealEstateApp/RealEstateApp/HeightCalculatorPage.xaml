<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.HeightCalculatorPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label FontSize="Large" VerticalOptions="Start" HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Current altitude: "/>
                        <Span Text="{Binding CurrentAltitude, StringFormat='{0} &#109;'}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Entry Placeholder="Measurement Label" HorizontalOptions="Fill"></Entry>

            <Label FontSize="Medium" VerticalOptions="EndAndExpand" HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Current pressure: "/>
                        <Span Text="{Binding CurrentPressure, StringFormat='{0} &#13169;'}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>